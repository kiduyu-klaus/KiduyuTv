<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include player preferences and user settings -->
        <include domain="sharedpref" path="player_preferences.xml"/>
        <include domain="sharedpref" path="subtitle_preferences.xml"/>
    </cloud-backup>

    <device-transfer>
        <!-- Include app data for device transfers -->
        <include domain="sharedpref" path="player_preferences.xml"/>
        <include domain="sharedpref" path="subtitle_preferences.xml"/>
    </device-transfer>
</data-extraction-rules>