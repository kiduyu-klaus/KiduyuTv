<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Hero Background Image -->
    <ImageView
        android:id="@+id/heroBackgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_movie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Side Gradient Overlay -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/hero_side_gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Navigation Sidebar -->
    <!-- Navigation Sidebar -->
    <LinearLayout
        android:id="@+id/navigationSidebar"
        android:layout_width="@dimen/sidebar_collapsed_width"
        android:layout_height="0dp"
        android:background="#CC000000"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Search -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:padding="8dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:background="@drawable/navigation_icon_selector"
                android:src="@drawable/ic_search"
                android:contentDescription="Search"
                app:tint="@drawable/icon_tint_selector" />

            <TextView
                android:id="@+id/searchLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Search"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:paddingStart="8dp"/>
        </LinearLayout>

        <!-- Home -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:padding="8dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:background="@drawable/navigation_icon_selector"
                android:src="@drawable/ic_home"
                android:contentDescription="Home"
                app:tint="@drawable/icon_tint_selector" />

            <TextView
                android:id="@+id/homeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Home"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:paddingStart="8dp"/>
        </LinearLayout>

        <!-- Movies -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/moviesIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:padding="8dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:background="@drawable/navigation_icon_selector"
                android:src="@drawable/ic_movie"
                android:contentDescription="Movies"
                app:tint="@drawable/icon_tint_selector" />

            <TextView
                android:id="@+id/moviesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Movies"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:paddingStart="8dp"/>
        </LinearLayout>

        <!-- TV Shows -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/tvIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:padding="8dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:background="@drawable/navigation_icon_selector"
                android:src="@drawable/ic_tv"
                android:contentDescription="TV Shows"
                app:tint="@drawable/icon_tint_selector" />

            <TextView
                android:id="@+id/tvLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="TV Shows"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:paddingStart="8dp"/>
        </LinearLayout>

        <!-- API Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/apiIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:padding="8dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:background="@drawable/navigation_icon_selector"
                android:src="@drawable/ic_anime"
                android:contentDescription="API Content"
                app:tint="@drawable/icon_tint_selector" />

            <TextView
                android:id="@+id/apiLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="API Content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:paddingStart="8dp"/>
        </LinearLayout>

        <!-- My List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/myListIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:padding="8dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:background="@drawable/navigation_icon_selector"
                android:src="@drawable/ic_list"
                android:contentDescription="My List"
                app:tint="@drawable/icon_tint_selector" />

            <TextView
                android:id="@+id/myListLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="My List"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:paddingStart="8dp"/>
        </LinearLayout>

        <!-- Settings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/settingsIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:padding="8dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:clickable="true"
                android:background="@drawable/navigation_icon_selector"
                android:src="@drawable/ic_settings"
                android:contentDescription="Settings"
                app:tint="@drawable/icon_tint_selector" />

            <TextView
                android:id="@+id/settingsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Settings"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:paddingStart="8dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Guideline at 50% from top (divides hero and categories) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />

    <!-- Hero Content (Top 50%) -->
    <ScrollView
        android:id="@+id/heroContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/guideline50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/navigationSidebar"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:paddingStart="48dp"
            android:paddingEnd="48dp">

            <!-- N Series Badge -->
            <TextView
                android:id="@+id/nSeriesBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/n_series_badge"
                android:padding="8dp"
                android:text="CINE STREAM"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- Match Score -->
            <TextView
                android:id="@+id/matchScoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="98% Match"
                android:textColor="#00C853"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Content Title -->
            <TextView
                android:id="@+id/contentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Movie Title"
                android:textColor="@color/white"
                android:textSize="42sp"
                android:textStyle="bold" />

            <!-- Metadata Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/yearText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:text="2023"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/maturityRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/maturity_badge"
                    android:padding="4dp"
                    android:text="PG-13"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/durationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="24dp"
                    android:text="2h 15m"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/qualityBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/quality_badge"
                    android:padding="4dp"
                    android:text="4K"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Synopsis -->
            <TextView
                android:id="@+id/synopsisText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:lineSpacingExtra="4dp"
                android:maxLines="2"
                android:text="Movie description goes here."
                android:textColor="@color/gray_light"
                android:textSize="16sp" />

            <!-- Action Buttons
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/playButton"
                    android:layout_width="140dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="16dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/button_selector"
                    android:text="Play"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/moreInfoButton"
                    android:layout_width="140dp"
                    android:layout_height="44dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/button_more_info_selector"
                    android:text="More Info"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
-->
        </LinearLayout>

    </ScrollView>

    <!-- Categories Section (Bottom 50%) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoriesRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="20dp"
        android:paddingBottom="16dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusUp="@id/heroContent"
        android:nextFocusDown="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/navigationSidebar"
        app:layout_constraintTop_toBottomOf="@id/guideline50" />

    <!-- Loading Overlay -->
    <RelativeLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/loadingProgressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loadingProgressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="Loading content..."
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>