<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Header with search input and voice button -->
    <LinearLayout
        android:id="@+id/searchHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Search Input -->
        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:background="@drawable/search_input_background"
            android:hint="Search movies and TV shows..."
            android:textColor="@color/white"
            android:textColorHint="@color/text_secondary"
            android:textSize="18sp"
            android:paddingStart="16dp"
            android:paddingEnd="56dp"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Clear Button -->
        <ImageButton
            android:id="@+id/clearSearchButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="-48dp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_close"
            android:tint="@color/text_secondary"
            android:visibility="gone"
            android:contentDescription="Clear search" />

        <!-- Voice Search Button -->
        <ImageButton
            android:id="@+id/voiceSearchButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/voice_search_button_background"
            android:src="@drawable/ic_mic"
            android:tint="@color/white"
            android:contentDescription="Voice search" />

    </LinearLayout>

    <!-- Filter Chips -->
    <LinearLayout
        android:id="@+id/filterChipsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:background="@color/background_dark"
        app:layout_constraintTop_toBottomOf="@id/searchHeader">

        <Button
            android:id="@+id/filterAllButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/filter_chip_background"
            android:text="All"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingHorizontal="16dp" />

        <Button
            android:id="@+id/filterMoviesButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/filter_chip_background"
            android:text="Movies"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingHorizontal="16dp" />

        <Button
            android:id="@+id/filterTVButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/filter_chip_background"
            android:text="TV Shows"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingHorizontal="16dp" />

    </LinearLayout>

    <!-- Main Content Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/filterChipsContainer"
        app:layout_constraintBottom_toBottomOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Search Results -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/searchResultsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:clipToPadding="false"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="4" />

            <!-- No Results Message -->
            <TextView
                android:id="@+id/noResultsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="32dp"
                android:gravity="center"
                android:text="No results found"
                android:textColor="@color/text_secondary"
                android:textSize="18sp"
                android:visibility="gone" />

            <!-- Loading Progress -->
            <ProgressBar
                android:id="@+id/loadingProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                app:indicatorColor="@color/cinema_red" />

            <!-- Search Hint -->
            <TextView
                android:id="@+id/searchHintText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="32dp"
                android:gravity="center"
                android:text="Search for movies and TV shows"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:visibility="visible" />

            <!-- Search History Section -->
            <FrameLayout
                android:id="@+id/searchHistoryContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/historyTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recent Searches"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/historyRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                </LinearLayout>

            </FrameLayout>

            <!-- Trending Searches Section -->
            <FrameLayout
                android:id="@+id/trendingContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/trendingTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trending Searches"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/trendingChipsContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="4dp" />

                    </HorizontalScrollView>

                </LinearLayout>

            </FrameLayout>

        </FrameLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>